<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab1Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/lab1_ex1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 1"
            android:layout_marginVertical="12dp"
            />

        <Button
            android:id="@+id/lab1_ex2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 2"
            android:layout_marginVertical="12dp"
            />

        <Button
            android:id="@+id/lab1_ex3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 3"
            android:layout_marginVertical="12dp"
            />

        <Button
            android:id="@+id/lab1_ex4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 4"
            android:layout_marginVertical="12dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>